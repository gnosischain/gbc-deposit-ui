{
  "name": "hez-swapper",
  "version": "0.1.0",
  "private": true,
  "homepage": "/hez-swapper",
  "dependencies": {
    "ethers": "^5.4.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-jss": "^10.7.1",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "standard": "^16.0.3"
  },
  "scripts": {
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "aws s3 sync build s3://hez-swapper.hermez.io --delete",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "start": "react-scripts start"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "lint-staged": {
    "*.{jsx,js}": "standard --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
